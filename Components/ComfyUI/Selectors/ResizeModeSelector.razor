<MudSelect @bind-Value="@SelectedMode"
           Label="@Label"
           Variant="@Variant"
           Margin="@Margin"
           Required="@Required"
           Disabled="@Disabled"
           HelperText="@HelperText">
    <MudSelectItem Value="@("nearest-exact")">Nearest (Fast)</MudSelectItem>
    <MudSelectItem Value="@("bilinear")">Bilinear (Smooth)</MudSelectItem>
    <MudSelectItem Value="@("area")">Area (Good for downscaling)</MudSelectItem>
    <MudSelectItem Value="@("bicubic")">Bicubic (High quality)</MudSelectItem>
    <MudSelectItem Value="@("lanczos")">Lanczos (Best quality)</MudSelectItem>
</MudSelect>

@code {
    [Parameter]
    public string SelectedMode { get; set; } = "nearest-exact";

    [Parameter]
    public EventCallback<string> SelectedModeChanged { get; set; }

    [Parameter]
    public string Label { get; set; } = "Resize Mode";

    [Parameter]
    public Variant Variant { get; set; } = Variant.Outlined;

    [Parameter]
    public Margin Margin { get; set; } = Margin.Dense;

    [Parameter]
    public bool Required { get; set; } = true;

    [Parameter]
    public bool Disabled { get; set; } = false;

    [Parameter]
    public string? HelperText { get; set; }
}
