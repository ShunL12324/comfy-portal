@using ComfyPortal.Models

<MudSelect @bind-Value="@SelectedNoise"
           Label="@Label"
           Variant="@Variant"
           Margin="@Margin"
           Required="@Required"
           Disabled="@Disabled"
           HelperText="@HelperText">
    @if (AvailableNoises.Any())
    {
        @foreach (var noise in AvailableNoises)
        {
            <MudSelectItem Value="@noise">@noise</MudSelectItem>
        }
    }
    else
    {
        <MudSelectItem Value="@("")">No noise sources available</MudSelectItem>
    }
</MudSelect>

@code {
    [Parameter]
    public List<string> AvailableNoises { get; set; } = new();

    [Parameter]
    public string SelectedNoise { get; set; } = "";

    [Parameter]
    public EventCallback<string> SelectedNoiseChanged { get; set; }

    [Parameter]
    public string Label { get; set; } = "Noise Source";

    [Parameter]
    public Variant Variant { get; set; } = Variant.Outlined;

    [Parameter]
    public Margin Margin { get; set; } = Margin.Dense;

    [Parameter]
    public bool Required { get; set; } = false;

    [Parameter]
    public bool Disabled { get; set; } = false;

    [Parameter]
    public string? HelperText { get; set; } = "Select noise generation source";
}
