@using ComfyPortal.Enums

<MudSelect @bind-Value="@SelectedScheduler"
           Label="@Label"
           Variant="@Variant"
           Margin="@Margin"
           Required="@Required"
           Disabled="@Disabled"
           HelperText="@HelperText">
    @foreach (var scheduler in Enum.GetValues<Scheduler>())
    {
        <MudSelectItem Value="@scheduler">@scheduler.ToComfyUIString()</MudSelectItem>
    }
</MudSelect>

@code {
    [Parameter]
    public Scheduler SelectedScheduler { get; set; } = Scheduler.Normal;

    [Parameter]
    public EventCallback<Scheduler> SelectedSchedulerChanged { get; set; }

    [Parameter]
    public string Label { get; set; } = "Scheduler";

    [Parameter]
    public Variant Variant { get; set; } = Variant.Outlined;

    [Parameter]
    public Margin Margin { get; set; } = Margin.Dense;

    [Parameter]
    public bool Required { get; set; } = true;

    [Parameter]
    public bool Disabled { get; set; } = false;

    [Parameter]
    public string? HelperText { get; set; }
}
