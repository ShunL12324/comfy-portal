@using ComfyPortal.Enums

<MudSelect @bind-Value="@SelectedSampler"
           Label="@Label"
           Variant="@Variant"
           Margin="@Margin"
           Required="@Required"
           Disabled="@Disabled"
           HelperText="@HelperText">
    @foreach (var sampler in Enum.GetValues<Sampler>())
    {
        <MudSelectItem Value="@sampler">@sampler.ToComfyUIString()</MudSelectItem>
    }
</MudSelect>

@code {
    [Parameter]
    public Sampler SelectedSampler { get; set; } = Sampler.Euler;

    [Parameter]
    public EventCallback<Sampler> SelectedSamplerChanged { get; set; }

    [Parameter]
    public string Label { get; set; } = "Sampler";

    [Parameter]
    public Variant Variant { get; set; } = Variant.Outlined;

    [Parameter]
    public Margin Margin { get; set; } = Margin.Dense;

    [Parameter]
    public bool Required { get; set; } = true;

    [Parameter]
    public bool Disabled { get; set; } = false;

    [Parameter]
    public string? HelperText { get; set; }
}
